<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="app.bettermetesttask.movies.sections.MoviesFragment"
        tools:layout="@layout/movies_fragment">

        <deepLink app:uri="@string/movies_deep_link"/>
        <action
            android:id="@+id/action_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment"/>
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="app.bettermetesttask.movies.sections.movie_details.MovieDetailsFragment"
        android:label="MovieDetailsFragment"
        tools:layout="@layout/movie_details_fragment">
        <argument
            android:name="movieId"
            app:argType="integer"/>
    </fragment>
</navigation>